        "@types/node": "^14.14.2",
        "@typescript-eslint/eslint-plugin": "^4.5.0",
        "@typescript-eslint/parser": "^4.5.0",
        "chai": "^4.2.0",
        "eslint": "^7.11.0",
        "mocha": "^8.2.0",
        "rimraf": "^3.0.2",
        "ts-node": "^9.0.0",
        "typescript": "^4.0.3"
    },
    "dependencies": {
        "@types/json5": "0.0.30",
        "articles": "^0.2.2",
