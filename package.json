{
    "name": "brogue",
    "version": "0.4.2",
    "description": "A Grammar based generative text library based on Tracery.",
    "main": "dist/index.js",
    "types": "dist/index.d.ts",
    "keywords": [
        "brogue",
        "generator",
        "grammars",
        "procgen"
    ],
    "scripts": {
